  font-display: swap;
}

@font-face {
  font-family: 'Azaraan';
  src: url('https://raw.githubusercontent.com/thetransgendertrex/Azaraanlanguage/main/Aza%27raan%20Planet%20Language.ttf') format('truetype');
  font-display: swap;
}

/* Apply Aza'raan font to custom HTML classes */
.azaraan-word,
.azaraan-phrase,
.azaraan-fusion-form {
  font-family: 'AzaraanOverride' !important;
  font-style: normal !important;
  font-weight: normal !important;
  letter-spacing: normal !important;
  text-transform: none !important;
  direction: ltr !important;
  unicode-bidi: isolate !important;
  color: inherit !important;
}

/* Override Pacifico font globally (for Google apps and others) */
* {
  font-family: 'Azaraan' !important;
}

/* Fix font dropdown label elements in Google apps that use Pacifico */
div[aria-label="Font"] span[style*="Pacifico"],
div[aria-label="Font"] div[style*="Pacifico"] {
  font-family: 'Azaraan' !important;
  font-size: 16px !important;
}
