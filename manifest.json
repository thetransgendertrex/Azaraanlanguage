{
  "manifest_version": 3,
  "name": "Aza’raan Font + Moonpunk Theme",
  "version": "4.0",
  "description": "Overrides Pacifico in Google Docs, Sheets, Slides, Forms, and Drive with the Aza’raan glyphic font. Applies a Moonpunk–Cyber-Glyphic interface. Built by William Blake Saville (#TheTransgenderTRex) for identity, inclusion, and survival.",
  "author": "William Blake Saville (aka #TheTransgenderTRex)",
  "homepage_url": "https://github.com/thetransgendertrex/Azaraanlanguage",

  "action": {
    "default_title": "Aza’raan Language Viewer",
    "default_popup": "index.html"
  },

  "icons": {
    "48": "https://raw.githubusercontent.com/thetransgendertrex/Azaraanlanguage/main/icon48.png",
    "128": "https://raw.githubusercontent.com/thetransgendertrex/Azaraanlanguage/main/icon128.png"
  },

  "permissions": [],

  "host_permissions": [
    "https://docs.google.com/*",
    "https://drive.google.com/*",
    "https://slides.google.com/*",
    "https://forms.google.com/*",
    "https://sheets.google.com/*",
    "https://drawings.google.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/*",
        "https://drive.google.com/*",
        "https://slides.google.com/*",
        "https://forms.google.com/*",
        "https://sheets.google.com/*",
        "https://drawings.google.com/*"
      ],
      "js": ["override.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "https://raw.githubusercontent.com/thetransgendertrex/Azaraanlanguage/main/index.html",
        "https://raw.githubusercontent.com/thetransgendertrex/Azaraanlanguage/main/style.css",
        "https://raw.githubusercontent.com/thetransgendertrex/Azaraanlanguage/main/override.js",
        "https://raw.githubusercontent.com/thetransgendertrex/Azaraanlanguage/main/script.js",
        "https://raw.githubusercontent.com/thetransgendertrex/Azaraanlanguage/main/Azaraan-Planet-Language.ttf",
        "https://raw.githubusercontent.com/thetransgendertrex/Azaraanlanguage/main/Aza%27ra%20Moonpunk%20Settlement%20(AI%20Generated).JPG"
      ],
      "matches": ["<all_urls>"]
    },
    {
      "resources": [
        "index.html",
        "style.css",
        "override.js",
        "script.js",
        "Azaraan-Planet-Language.ttf",
        "Aza'ra Moonpunk Settlement (AI Generated).JPG"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
