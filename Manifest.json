{
  "manifest_version": 3,
  "name": "Aza'raan Font Override",
  "version": "1.0",
  "description": "Replaces the Pacifico font with the Aza'raan glyph font in Google Docs, Slides, and Drive apps.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://slides.google.com/*",
    "https://sheets.google.com/*",
    "https://forms.google.com/*",
    "https://drive.google.com/*",
    "https://drawings.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/*",
        "https://slides.google.com/*",
        "https://sheets.google.com/*",
        "https://forms.google.com/*",
        "https://drive.google.com/*",
        "https://drawings.google.com/*"
      ],
      "js": ["override.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["*"],
    "matches": ["<all_urls>"]
  }]
}
